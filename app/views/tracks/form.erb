<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Music Wall</a>
      </div>
      <div class="nav navbar-nav navbar-right nav-pills">
        <% if session["user"] %>
        <span>Hi <%= session["user"].name %>!</span>
        <% end %>
        <li role="presentation"><a href="/tracks">Tracks</a>
        </li>
        <li role="presentation" class="active"><a href="/tracks/form">Submission</a></li>
        <% unless session["user"] %>
        <li role="presentation"><a href="/users/login">Log In</a></li>
        <% end %>
        <% unless session["user"] %>
        <li role="presentation"><a href="/users/signup">Sign Up</a></li>
        <% end %>
        <% if session["user"] %>
        <li role="presentation"><a href="/users/logout">Log Out</a></li>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="jumbotron text-center">
    <h1>Post a Track</h1>
  </div>
  <hr/>

  <% if @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="fluid-container">
    <form method="post" action="/tracks">

      <div class="form-group">
        <h3><label class="label label-info">Author</label></h3>
        <input type="text" class="form-control" placeholder="author" name="author" value="<%= @track.author %>">
      </div>

      <div class="form-group">
        <h3><label class="label label-info">Title</label></h3>
        <input type="text" class="form-control" placeholder="title" name="title" value="<%= @track.title %>">
      </div>

      <div class="form-group">
        <h3><label class="label label-danger">Youtube URL</label></h3>
        <input type="text" class="form-control" placeholder="https://youtube.com/watch?" name="URL" value="<%= @track.URL %>">
      </div>

      <div>
        <input type="submit" class="btn btn-primary btn-lg center-block" value="Submit">
      </div>

    </form>
  </div>
</div>