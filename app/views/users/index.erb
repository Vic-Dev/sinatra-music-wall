<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Music Wall</a>
      </div>
      <div class="nav navbar-nav navbar-right nav-pills">
        <% if session["user"] %>
        <span>Hi <%= @users.find(session["user"]).name %>!</span>
        <% end %>
        <li role="presentation"><a href="/tracks">Tracks</a>
        </li>
        <li role="presentation"><a href="/tracks/form">Submission</a></li>
        <% unless session["user"] %>
        <li role="presentation"><a href="/users/login">Log In</a></li>
        <% end %>
        <% unless session["user"] %>
        <li role="presentation"><a href="/users/signup">Sign Up</a></li>
        <% end %>
        <% if session["user"] %>
        <li role="presentation"><a href="/users/logout">Log Out</a></li>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="jumbotron text-center">
    <h1>Users Page</h1>
  </div>
  <hr/>

  <div class="row">
    <% @users.each do |user| %>
    <div class="user page-header col-md-4 text-center">
      <h3><%= user.id %>. <%= user.name %></a> <p><small>(pwd: <%= user.password %>)</small></p><p><small>Tracks: <% user.tracks.map do |track| %><li><%= track.title %></li><% end %></small></p></h3>
    </div>
    <% end %>
  </div>

</div>